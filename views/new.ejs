
<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    
    <form class="ui form" method="POST" action="/blogs">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="name">
        </div>
        <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" placeholder="URL">
        </div>
        <div class="field">
        <label>Content</label>
            <textarea name="blog[body]"></textarea>
        </div>
        <div class="field">
            <input type="submit" class="ui big violet basic button">
        </div>
    </form>
</div>

<% include ./partials/footer %>